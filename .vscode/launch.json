    "version": "0.2.0",
    "configurations": [
        {
            "name": "Wannabe Image Scraping",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "args": [
                "runspider",
                "${file}",
                "-o",
                "./wannabe_crawler/quotes.jsonl",
            ]
        },
        {
            "name": "Flask Application",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
            ],
            "jinja": true,
        }
    ]
}
