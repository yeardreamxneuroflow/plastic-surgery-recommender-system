{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/",
            "console": "integratedTerminal",
        },
        {
            "name": "Run Flask Application",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
            },
            "args": [
                "run",
                "--host=0.0.0.0",
            ],
            "jinja": true,
        },
        {
            "name": "Run Wannabe Image Scraping",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "cwd": "${workspaceFolder}/scraper",
            "args": [
                "crawl",
                // "wannabe_men",
                "wannabe_women",
            ],
        },
    ],
}